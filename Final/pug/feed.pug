doctype html
html
    head
        link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css')
        style. 
            .pos{
              
                position:fixed;
                
            }

    body(style="background-color:skyblue")  
       a(href="http://localhost:8000/").btn-default logout
       center 
        div.col-sm-9


            h2 
                small Recent posts 
            br 
        
            each i in {posts}
                each j in i
                    //p=j
                    .media
                        .media-left 
                       
                            img.media-object(src='/../../public/img/avatar.png',style='width:60px',alt='user-img')
                        .media-left
                            h4.media-heading= j.people[0].name 
                            p.pos
                                a(href="http://localhost:8000/api/blog/feed/"+j._id, style="color:black")=j.post
                    br
                    br
            form(action="./post" method="post")
                input(name="post",type="text",placeholder="Enter your post")
                input(type="submit",value="post")